<div class="card mb-3 container">{#mb-3#}
                <h4 class="card-title text-center">{{contact.nom}} {{contact.prenom}}</h4>
                <div class="row">
                    <div class="col-2 d-flex align-items-center">
                        <img style="height: auto; max-width: 200px; display: block;" src="{{contact.avatar}}" class="avatar mx-auto" alt="image avatar">
                    </div>
                    <div class="col">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{contact.rue}}</li>
                            <li class="list-group-item">{{contact.cp}}</li>
                            <li class="list-group-item">{{contact.ville}}</li>
                            <li class="list-group-item">{{contact.mail}}</li>
                            <li class="list-group-item">
                                {% if contact.sexe==0 %}
                                    <span>Homme</span>
                                {% else %}
                                    <span>Femme</span>
                                {% endif %}
                            </li>
                            <div class="card-body">
                                <a href="{{path('ficheContact', {'id': contact.id})}}" class="btn btn-success btn-block text-center w-100">Détail ...</a>
                            </div> 
                            {#<li class="list-group-item"> 
                                <a href="{{path('ficheCategorie', {'id': contact.categorie.id})}}">
                                    {{contact.Categorie.libelle}}
                                </a>
                            </li>#}
                        </ul>
                    </div>
                </div>
            </div>
                {#<a href="{{path('contacts')}}" class="btn btn-primary text-center w-25">Revenir à la liste</a>#}